        <TextBlock x:Name="textoAlert" HorizontalAlignment="Left" Margin="616,444,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="59" Width="390" FontSize="20"/>
        <TextBox x:Name="goles_locales" HorizontalAlignment="Left" Margin="684,231,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Height="80" FontSize="12"/>
        <TextBox x:Name="goles_visitante" HorizontalAlignment="Left" Margin="857,230,0,0" Text="0" TextWrapping="Wrap" VerticalAlignment="Top" Height="76" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="791,231,0,0" Text="-" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="48"/>
